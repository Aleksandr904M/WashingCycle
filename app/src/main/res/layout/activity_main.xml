<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/bg">
    <TextView
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="Общая длина ЛБТ, м" android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/textView3" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/editCasingLength" android:layout_marginTop="20dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView3"
            android:text="Внешний диам ЛБТ, мм"
            android:textAlignment="center" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/editCasingDiameter" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Длина обсадной колонны, м"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="5dp" android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/textView6"/>
    <TextView
            android:text="Внутренний диам обс колон, мм"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/buttonSave"/>
    <TextView
            android:text="Внутренний диам ЛБТ, мм"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="111dp" android:layout_marginEnd="5dp" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Общая длина ТБПК, м"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/editLengthLBT" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/textView8" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Внешний диам ТБПК, мм"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView8"
            android:textAlignment="center"
            android:textColor="@color/black" app:layout_constraintTop_toBottomOf="@+id/editOuterDiameterLBT"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView7" app:layout_constraintEnd_toStartOf="@+id/textView9"/>
    <TextView
            android:text="Внутренний диам ТБПК, мм"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView9"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@+id/editInnerDiameterLBT" android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView8" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Расход пром жидк на вх л/с"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView10"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/editLengthTBPK"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Диаметр долота, мм"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView11"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/editOuterDiameterTBPK" android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView10" app:layout_constraintEnd_toStartOf="@+id/textView12"/>
    <TextView
            android:text="Коэффицент кавернозности"
            android:layout_width="0dp"
            android:layout_height="35sp" android:id="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/editInnerDiameterTBPK" android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView11" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editCasingLength"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:textAlignment="center" android:textStyle="bold" android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/editCasingDiameter"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editCasingDiameter"
            android:textAlignment="center" android:textStyle="bold" android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/editCasingLength" app:layout_constraintEnd_toEndOf="@+id/textView6"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editLengthLBT"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/editOuterDiameterLBT" app:layout_constraintHorizontal_bias="1.0"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editOuterDiameterLBT"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/editLengthLBT"
            app:layout_constraintEnd_toStartOf="@+id/editInnerDiameterLBT"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editInnerDiameterLBT"
            android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/editOuterDiameterLBT"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editLengthTBPK"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:textStyle="bold"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="4dp" app:layout_constraintEnd_toStartOf="@+id/editOuterDiameterTBPK"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editOuterDiameterTBPK"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/editLengthTBPK"
            app:layout_constraintEnd_toStartOf="@+id/editInnerDiameterTBPK"/>
    <Button
            android:text="Цикл промывки"
            android:layout_width="0dp"
            android:layout_height="70sp" android:id="@+id/buttonWashingCycle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonGasLag" android:layout_marginEnd="20dp"/>
    <Button
            android:text="Запаздывание газа"
            android:layout_width="0dp"
            android:layout_height="68dp" android:id="@+id/buttonGasLag"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:textAlignment="center"
            android:layout_marginEnd="20dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/buttonWashingCycle"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editInnerDiameterTBPK"
            android:textStyle="bold" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/editOuterDiameterTBPK" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editSolutionConsumption"
            android:textStyle="bold" android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginTop="4dp" app:layout_constraintEnd_toStartOf="@+id/editDiameterChisel"
            app:layout_constraintHorizontal_bias="0.916"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editDiameterChisel"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/editSolutionConsumption"
            app:layout_constraintEnd_toStartOf="@+id/editCavernous"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editCavernous"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/editDiameterChisel" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="107sp" android:id="@+id/textMessage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:textStyle="bold"
            android:textAlignment="center" android:textSize="28sp" android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="440dp"
            app:layout_constraintEnd_toStartOf="@+id/textFinal" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="107sp"
            android:layout_height="107sp" android:id="@+id/textFinal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" android:textStyle="bold"
            android:textAlignment="center" android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="440dp"/>
    <Button
            android:text="Сохранить"
            android:layout_width="0dp"
            android:layout_height="68dp" android:id="@+id/buttonSave"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"
            app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="11dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>